PROCEDURE ProcedureScalaire(t1, t2,  VAR resultat)
VAR

BEGIN
    FOR i FROM 1 STEP 1 Donnez
        resultat = resultat + t1(i) * t2(i)
    END_FOR
END

ALGORITHM  Checkpoint
